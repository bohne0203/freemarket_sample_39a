%head
  %script{ src: "https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"}
  / %link{ href: "https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.css", rel: "stylesheet"}/
  / %script{ src: "https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.min.js"}
  %link{ rel:"stylesheet",href:"https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.4.1/css/swiper.min.css" }
%body
  %script{ src:"https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.4.1/js/swiper.min.js" }

= render partial: 'mercaries/header'

%main.main
  %section.banner
    .swiper-container
      .swiper-wrapper
        .swiper-slide
          = link_to do
            = image_tag("/images/top-banner-kusanagi.jpg", class: "banner-image")
        .swiper-slide
          = link_to do
            = image_tag("/images/top-banner-2.png", class: "banner-image")
        .swiper-slide
          .swiper-slide__content
            %h3
              スマホでかんたん
              %br
              フリマアプリ
            %p
              メルカリはスマホからすぐに出品できる
              %br
              購入時も安心な独自システムのアプリです
            .swiper-slide__content__link
              = link_to("https://itunes.apple.com/jp/app/id667861049?l=ja&mt=8",class: "swiper-slide__content__link__itunes" ) do
                = image_tag("/images/app-store.svg", width: "170")
              = link_to("https://play.google.com/store/apps/details?id=com.kouzoh.mercari&hl=ja",class: "swiper-slide__content__link__android") do
                = image_tag("/images/google-play.svg",height: "50", width: "170")
            = image_tag("/images/main_content_pc.png")
          = image_tag("/images/main_bg_pc.jpg",class: "swiper-slide__bg")
      .swiper-pagination
      .swiper-button-prev
      .swiper-button-next
  %script
    window.addEventListener('load', function() {
    var swiper = new Swiper('.swiper-container', {
    loop: true,
    pagination: '.swiper-pagination',
    nextButton: '.swiper-button-next',
    prevButton: '.swiper-button-prev'
    });
    }, false);

  %section.contents
    %h2.pickup-header ピックアップカテゴリー
    .pickup-items
      %h3.pickup-items__title
        = link_to("レディース新着アイテム","#")
      .item-box
        = render partial: 'mercaries/item-content'
        = render partial: 'mercaries/item-content'
        = render partial: 'mercaries/item-content'
        = render partial: 'mercaries/item-content'
      .item-box__viewall
        = link_to("すべての商品を見る","#")
    .pickup-items


  %a.btn-exhibit{href:"#"}
    .sell 出品
    %i.fa.fa-camera
%aside.app-banner
  .app-banner__pc
    .app-banner__pc__inner
      %h2 スマホでかんたんフリマアプリ
      %p 今すぐ無料ダウンロード！
      .app-banner__icon.clearfix
        %figure.mercari-logo
          =image_tag("/images/mercari_icon.png", width: "68")
        %ul.app-logo
          %li
            = link_to("https://itunes.apple.com/jp/app/id667861049?l=ja&mt=8") do
              =image_tag("/images/app-store.svg",alt: "", height: "40",  width: "133")
          %li
            = link_to("https://play.google.com/store/apps/details?id=com.kouzoh.mercari&hl=ja", target: "_blank") do
              = image_tag("/images/google-play.svg", alt: "", height: "40", width: "133" , class: "google-app-logo")
    %figure
      = image_tag("/images/download_content_pc.png", alt: "", class:"mobile-img")
= render partial: 'mercaries/footer'
